@page "/employee/employeelist"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime
@using Microsoft.AspNetCore.Components.Authorization
@using arna.HRMS.ClientServices
@using arna.HRMS.ClientServices.Common
@using arna.HRMS.ClientServices.Department
@using arna.HRMS.ClientServices.Employee
@using arna.HRMS.Models.DTOs
@using arna.HRMS.Models.Enums
@using arna.HRMS.Models.ViewModels
@inject IDepartmentService DepartmentService
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@inject NotificationService NotificationService
@inject AuthenticationStateProvider AuthStateProvider

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Employee Directory</h3>
        @if (IsAdmin)
        {
            <button class="btn btn-success" @onclick='() => NavigateTo("/employees/create")'>
                <i class="bi bi-plus-lg"></i> Add Employee
            </button>
        }
    </div>

    <div class="mb-3">
        <input type="text" placeholder="Search employees..." class="form-control w-50 shadow-sm" />
    </div>


    @if (employees == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="table-responsive shadow-sm">

            <table class="table table-hover align-middle">

                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Employee</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th>DOB</th>
                        <th>Dept Code</th>
                        <th>Manager</th>
                        <th>Phone</th>
                        <th>Hire Date</th>
                        <th>Status</th>
                        @if (IsAdmin)
                        {
                            <th class="text-center">Actions</th>
                        }
                    </tr>
                </thead>

                <tbody>
                    @foreach (var employee in employees)
                    {
                        <tr>
                            <td>@employee.EmployeeNumber</td>

                            <td>
                                <strong>@employee.FirstName @employee.LastName</strong>
                            </td>

                            <td>
                                <a href="mailto:@employee.Email" class="text-decoration-none">
                                    <i class="bi bi-envelope"></i> @employee.Email
                                </a>
                            </td>

                            <td>@employee.Position</td>
                            <td>@employee.DateOfBirth.ToShortDateString()</td>
                            <td><span class="badge bg-info">@employee.DepartmentCode</span></td>
                            <td>@employee.ManagerFullName</td>

                            <td>
                                <i class="bi bi-telephone"></i> @employee.PhoneNumber
                            </td>

                            <td>@employee.HireDate.ToShortDateString()</td>

                            <td>
                                @if (employee.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>

                            @if (IsAdmin)
                            {
                                <td class="text-center">

                                    <div class="btn-group">
                                        <button class="btn btn-outline-primary btn-sm" @onclick="() => EditEmployee(employee.Id)">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                        <br />
                                        <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteInfo(employee.Id)">
                                            <i class="bi bi-trash"></i>
                                        </button>

                                    </div>

                                </td>
                            }
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }

</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f7f9fc !important;
    }
</style>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this employee?");
    }
</script>


@code {
    private List<EmployeeDto>? employees;
    private bool IsAdmin;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        var isAuthenticated = state.User.Identity?.IsAuthenticated ?? false;

        if (!isAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        IsAdmin = state.User.IsInRole(UserRole.SuperAdmin.ToString()) || state.User.IsInRole(UserRole.Admin.ToString());
        await LoadEmployeesAsync();
    }
    
    private async Task LoadEmployeesAsync()
    {
        var result = await EmployeeService.GetEmployeesAsync();

        if (result.IsSuccess && result.Data != null)
        {
            employees = result.Data;
        }
        else if (!result.IsSuccess)
        {
            NotificationService.Error($"Failed to load employees ({result.StatusCode}): {result.Message}");
            employees = new List<EmployeeDto>();
        }
        else
        {
            employees = new List<EmployeeDto>();
        }
    }

    private void NavigateTo(string route)
    {
        NavigationManager.NavigateTo(route);
    }

    private async Task DeleteInfo(int id)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>(
            "confirm",
            "Are you sure you want to delete this employee?"
        );

        if (!confirmed)
            return;

        var result = await EmployeeService.DeleteEmployeeAsync(id);

        if (!result.IsSuccess)
        {
            NotificationService.Error($"Delete failed ({result.StatusCode}): {result.Message}");
            return;
        }

        NotificationService.Success("Employee deleted successfully.");
        await LoadEmployeesAsync();
    }

    private void EditEmployee(int id)
    {
        NavigationManager.NavigateTo($"/employees/edit/{id}");
    }
}

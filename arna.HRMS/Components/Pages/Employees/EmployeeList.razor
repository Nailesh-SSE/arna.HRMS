@page "/employees/employeelist"
@rendermode InteractiveServer
@inject IJSRuntime JsRuntime
@using arna.HRMS.ClientServices.Employee
@using arna.HRMS.Models.ViewModels
@using arna.HRMS.Services
@inject IDepartmentService DepartmentService
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Employee Directory</h3>

        <button class="btn btn-success" @onclick='() => NavigateTo("/createemployee")'>
            <i class="bi bi-plus-lg"></i> Add Employee
        </button>
    </div>


    <div class="mb-3">
        <input type="text" placeholder="Search employees..." class="form-control w-50 shadow-sm" />
    </div>


    @if (employees == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="table-responsive shadow-sm">

            <table class="table table-hover align-middle">

                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Employee</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th>DOB</th>
                        <th>Dept Code</th>
                        <th>Manager</th>
                        <th>Phone</th>
                        <th>Hire Date</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var employee in employees)
                    {
                        <tr>
                            <td>@employee.EmployeeNumber</td>

                            <td>
                                <strong>@employee.FirstName @employee.LastName</strong>
                                <br />
                                <small class="text-muted">@employee.Position</small>
                            </td>

                            <td>
                                <a href="mailto:@employee.Email" class="text-decoration-none">
                                    <i class="bi bi-envelope"></i> @employee.Email
                                </a>
                            </td>

                            <td>@employee.Position</td>
                            <td>@employee.DateOfBirth.ToShortDateString()</td>
                            <td><span class="badge bg-info">@employee.DepartmentCode</span></td>
                            <td>@employee.ManagerFullName</td>

                            <td>
                                <i class="bi bi-telephone"></i> @employee.PhoneNumber
                            </td>

                            <td>@employee.HireDate.ToShortDateString()</td>

                            <td>
                                @if (employee.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>

                            <td class="text-center">

                                <div class="btn-group">
                                    <button class="btn btn-outline-primary btn-sm" @onclick="() => EditEmployee(employee.Id)">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <br />
                                    <button class="btn btn-outline-danger btn-sm" @onclick="() => DeleteInfo(employee.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>

                                </div>

                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }

</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f7f9fc !important;
    }
</style>
<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this employee?");
    }
</script>


@code {
    private List<EmployeeViewModel>? employees;

    protected override async Task OnInitializedAsync()
    {
        var data = await EmployeeService.GetEmployeesAsync();
        var departmentsdata = await DepartmentService.GetDepartmentsAsync();

        employees = data.Select(s => new EmployeeViewModel
        {
            Id=s.Id,
            EmployeeNumber = s.EmployeeNumber,
            FirstName = s.FirstName,
            LastName = s.LastName,
            Email = s.Email,
            DepartmentCode = departmentsdata
                .Where(d => d.Id == s.DepartmentId)
                .Select(d => d.Code)
                .FirstOrDefault(),
            ManagerFullName = data
                .Where(e => e.Id == s.ManagerId)
                .Select(e => e.FirstName + " " + e.LastName)
                .FirstOrDefault(),
            PhoneNumber = s.PhoneNumber,
            HireDate = s.HireDate,
            Position = s.Position,
            DateOfBirth = s.DateOfBirth,
            IsActive = s.IsActive,

        }).ToList();
        StateHasChanged();
    }
    private void NavigateTo(string route)
    {
        NavigationManager.NavigateTo(route);
    }
    private async Task DeleteInfo(int Id)
    {
        if (await JsRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this employee?"))
        {
            await EmployeeService.DeleteEmployeeAsync(Id);
            NavigationManager.NavigateTo("/employees/employeelist", forceLoad: true);
        }
        // await EmployeeService.DeleteEmployeeAsync(Id);
        StateHasChanged();
        await OnInitializedAsync();
    }
    private void EditEmployee(int id)
    {
        NavigationManager.NavigateTo($"/employees/edit/{id}");
    }
}

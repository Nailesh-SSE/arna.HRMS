@using arna.HRMS.Models.DTOs

<tr>
    <td class="fw-medium">@Employee.EmployeeNumber</td>

    <td>
        <div class="d-inline-flex align-items-center gap-2">
            <i class="bi bi-person-circle text-muted"></i>
            <div class="lh-sm">
                    @Employee.FirstName
                    @Employee.LastName
            </div>
        </div>
    </td>

    <td>
        <div class="d-inline-flex align-items-center gap-2">
            <i class="bi bi-envelope text-muted"></i>
            <a href="mailto:@Employee.Email">@Employee.Email</a>
        </div>
    </td>

    <td class="text-muted">@Employee.Position</td>
    <td>@Employee.DateOfBirth.ToShortDateString()</td>

    <td>
        <span class="badge bg-info-subtle text-info fw-semibold">
            @Employee.DepartmentCode
        </span>
    </td>

    <td>
        <div class="d-inline-flex align-items-center gap-2">
            <i class="bi bi-person-circle text-muted"></i>
            @Employee.ManagerFullName
        </div>
    </td>


    <td>
        <span class="badge @(Employee.IsActive ? "bg-success" : "bg-danger")">
            @(Employee.IsActive ? "Active" : "Inactive")
        </span>
    </td>

    @if (ShowActions)
    {
        <td class="text-center">
            <div class="d-inline-flex gap-2">
                <button class="btn btn-sm btn-outline-primary"
                        title="Edit"
                        @onclick="() => OnEdit.InvokeAsync(Employee.Id)">
                    <i class="bi bi-pencil"></i>
                </button>

                <button class="btn btn-sm btn-outline-danger" title="Delete">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </td>
    }
</tr>

@code {
    [Parameter, EditorRequired] public EmployeeDto Employee { get; set; } = default!;
    [Parameter] public bool ShowActions { get; set; }
    [Parameter] public EventCallback<int> OnEdit { get; set; }
}

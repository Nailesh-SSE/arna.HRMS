@using arna.HRMS.Models.ViewModels.Leave
@using arna.HRMS.Models.Enums
@using arna.HRMS.Services
@using arna.HRMS.Services.Common

@inject NavigationManager Nav
@inject ILeaveService LeaveService
@inject NotificationService NotificationService

<div class="container-fluid px-3 px-md-4 py-3 dash-fade-in">

    <!-- ══════════ HEADER ══════════ -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h3 class="fw-bold mb-1">@greeting, @UserFullName</h3>
            <p class="text-muted mb-0">
                <i class="bi bi-calendar3 me-1"></i>
                @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                <span class="mx-1">•</span>
                <i class="bi bi-clock me-1"></i>
                @DateTime.Now.ToString("hh:mm tt")
            </p>
        </div>
    </div>

    <!-- ══════════ STAT CARDS ══════════ -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="stat-icon bg-success bg-opacity-10 text-success">
                        <i class="bi bi-calendar-check fs-4"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Leave Balance</small>
                        <span class="fs-3 fw-bold lh-1 text-success">@totalBalance</span>
                        <small class="text-muted"> days</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="stat-icon bg-danger bg-opacity-10 text-danger">
                        <i class="bi bi-calendar-x fs-4"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Leaves Used</small>
                        <span class="fs-3 fw-bold lh-1">@totalUsed</span>
                        <small class="text-muted"> days</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="stat-icon bg-warning bg-opacity-25 text-warning">
                        <i class="bi bi-hourglass-split fs-4"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Pending</small>
                        <span class="fs-3 fw-bold lh-1">@pendingCount</span>
                        <small class="text-muted"> requests</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6 col-lg-3">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                        <i class="bi bi-briefcase fs-4"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block">Total Allowed</small>
                        <span class="fs-3 fw-bold lh-1">@totalAllowed</span>
                        <small class="text-muted"> days</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ══════════ BALANCE + RECENT ══════════ -->
    <div class="row g-4 mb-4">

        <!-- Leave Balance Breakdown -->
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-header bg-transparent border-bottom
                            d-flex align-items-center justify-content-between py-3">
                    <h6 class="fw-semibold mb-0">
                        <i class="bi bi-bar-chart-line text-primary me-2"></i>
                        Leave Balance Breakdown
                    </h6>
                    <a href="/emp-leave-management"
                       class="btn btn-sm btn-primary rounded-pill">
                        <i class="bi bi-plus me-1"></i> Apply
                    </a>
                </div>
                <div class="card-body">
                    @if (leaveBalances.Any())
                    {
                        <div class="row g-3">
                            @foreach (var (bal, idx) in leaveBalances.Select((b, i) => (b, i)))
                            {
                                var color = GetColor(idx);
                                var pct = bal.TotalDays > 0
                                ? (int)(bal.RemainingDays * 100.0 / bal.TotalDays)
                                : 0;

                                <div class="col-sm-6">
                                    <div class="leave-type-card bg-@(color)
                                                        bg-opacity-10 p-3 rounded-3">
                                        <div class="d-flex justify-content-between
                                                            align-items-start mb-2">
                                            <div>
                                                <div class="fw-semibold">
                                                    @FormatName(bal.LeaveTypeName)
                                                </div>
                                                <small class="text-muted">
                                                    @bal.UsedDays used of @bal.TotalDays
                                                </small>
                                            </div>
                                            <span class="badge bg-@color bg-opacity-25
                                                                 text-@color fs-6 fw-bold">
                                                @bal.RemainingDays
                                            </span>
                                        </div>
                                        <div class="progress" style="height:6px;">
                                            <div class="progress-bar bg-@color"
                                                 style="width:@pct%"></div>
                                        </div>
                                        <div class="text-end mt-1">
                                            <small class="text-muted">@pct% remaining</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-calendar3 fs-1 d-block mb-2 opacity-50"></i>
                            <p class="mb-0">No leave data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Requests -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-header bg-transparent border-bottom
                            d-flex align-items-center justify-content-between py-3">
                    <h6 class="fw-semibold mb-0">
                        <i class="bi bi-clock-history text-primary me-2"></i>
                        My Recent Requests
                    </h6>
                    <a href="/emp-leave-management"
                       class="btn btn-sm btn-outline-primary rounded-pill">
                        View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (recentRequests.Any())
                    {
                        <div class="dash-scroll-area-sm">
                            <ul class="list-group list-group-flush">
                                @foreach (var req in recentRequests)
                                {
                                    <li class="list-group-item px-3 py-3">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="request-type-icon @StatusBg(req.StatusId)">
                                                <i class="@StatusIcon(req.StatusId)"></i>
                                            </div>
                                            <div class="flex-grow-1" style="min-width:0;">
                                                <div class="fw-medium small text-truncate">
                                                    @GetLeaveTypeName(req.LeaveTypeId)
                                                </div>
                                                <small class="text-muted">
                                                    @req.StartDate.ToString("MMM dd") –
                                                    @req.EndDate.ToString("MMM dd")
                                                    <span class="mx-1">•</span>
                                                    @req.LeaveDays day(s)
                                                </small>
                                            </div>
                                            <span class="badge rounded-pill @StatusBadge(req.StatusId)">
                                                @req.StatusId
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-inbox fs-1 d-block mb-2 opacity-50"></i>
                            <p class="mb-0">No leave requests yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- ══════════ MONTHLY SUMMARY ══════════ -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-transparent border-bottom py-3">
                    <h6 class="fw-semibold mb-0">
                        <i class="bi bi-calendar-month text-primary me-2"></i>
                        @DateTime.Now.ToString("MMMM yyyy") — Leave Summary
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3 text-center">
                        @foreach (var s in monthlySummary)
                        {
                            <div class="col-6 col-md-3">
                                <div class="p-3 bg-@s.Color bg-opacity-10 rounded-3">
                                    <div class="fs-3 fw-bold text-@s.Color">@s.Count</div>
                                    <small class="text-muted fw-medium">@s.Label</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ══════════ QUICK ACTIONS ══════════ -->
    <div class="mb-2">
        <h6 class="fw-semibold mb-3">
            <i class="bi bi-grid me-2"></i>Quick Access
        </h6>
        <div class="row g-3">
            @foreach (var a in quickActions)
            {
                <div class="col-6 col-sm-4 col-md-3">
                    <div class="card border-0 shadow-sm rounded-3
                                    text-center action-tile h-100"
                         role="button"
                         @onclick="() => Nav.NavigateTo(a.Route)">
                        <div class="card-body py-4">
                            <div class="action-icon-circle @a.Bg mb-2 mx-auto">
                                <i class="@a.Icon @a.TextColor fs-5"></i>
                            </div>
                            <div class="fw-semibold small">@a.Label</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@code {

    [Parameter] public string UserFullName { get; set; } = "";
    [Parameter] public int EmployeeId { get; set; }

    private string greeting = "";

    // ── Data ──
    private List<LeaveTypeViewModel> leaveTypes = new();
    private Dictionary<int, string> leaveTypeNames = new();
    private List<LeaveRequestViewModel> myRequests = new();
    private List<LeaveRequestViewModel> recentRequests = new();
    private List<LeaveBalanceViewModel> leaveBalances = new();

    // ── Stats ──
    private int totalBalance;
    private int totalUsed;
    private int totalAllowed;
    private int pendingCount;

    // ── Monthly Summary ──
    private record SummaryItem(string Label, int Count, string Color);
    private List<SummaryItem> monthlySummary = new();

    // ── Quick Actions ──
    private record QuickAction(string Label, string Icon, string Route,
                               string Bg, string TextColor);

    private readonly List<QuickAction> quickActions = new()
    {
         new("Employee",    "bi bi-journal-text", "/employee",  "bg-warning bg-opacity-25", "text-warning"),
        new("Attendance",   "bi bi-clock-history", "/attendance",   "bg-success bg-opacity-10", "text-success"),
        new("My Profile",   "bi bi-person-circle", "/profile",      "bg-info bg-opacity-10",    "text-info"),
        new("LeaveMangement",  "bi bi-calendar-plus", "/emp-leave-management", "bg-primary bg-opacity-10", "text-primary"),
    };

    // ═══════════ LIFECYCLE ═══════════

    protected override async Task OnInitializedAsync()
    {
        SetGreeting();
        await LoadLeaveTypes();
        await LoadMyRequests();
        await LoadBalances();
        BuildMonthlySummary();
    }

    private void SetGreeting()
    {
        var h = DateTime.Now.Hour;
        greeting = h switch
        {
            >= 5 and < 12 => "Good Morning",
            >= 12 and < 17 => "Good Afternoon",
            >= 17 and < 21 => "Good Evening",
            _ => "Good Night"
        };
    }

    // ═══════════ LOADERS ═══════════

    private async Task LoadLeaveTypes()
    {
        try
        {
            var res = await LeaveService.GetLeaveTypesAsync();
            leaveTypes = res?.IsSuccess == true && res.Data != null ? res.Data : new();
            leaveTypeNames = leaveTypes.ToDictionary(
                t => t.Id,
                t => FormatName(t.LeaveNameId.ToString()));
        }
        catch
        {
            leaveTypes = new();
            leaveTypeNames = new();
        }
    }

    private async Task LoadMyRequests()
    {
        try
        {
            var res = await LeaveService.GetLeaveRequestsByEmployeeAsync(EmployeeId);
            myRequests = res?.IsSuccess == true && res.Data != null ? res.Data : new();

            pendingCount = myRequests.Count(r => r.StatusId == Status.Pending);

            recentRequests = myRequests
                .OrderByDescending(r => r.StartDate)
                .Take(6)
                .ToList();
        }
        catch { myRequests = new(); }
    }

    private async Task LoadBalances()
    {
        try
        {
            var res = await LeaveService.GetLeaveRequestsByFilterAsync(Status.Approved, EmployeeId);

            var approved = res?.IsSuccess == true && res.Data != null
                ? res.Data : new();

            var usedByType = approved
                .GroupBy(x => x.LeaveTypeId)
                .ToDictionary(g => g.Key, g => g.Sum(x => x.LeaveDays));

            leaveBalances = leaveTypes.Select(t =>
            {
                usedByType.TryGetValue(t.Id, out var used);
                return new LeaveBalanceViewModel
                {
                    LeaveTypeId = t.Id,
                    LeaveTypeName = t.LeaveNameId.ToString(),
                    TotalDays = t.MaxPerYear,
                    UsedDays = used
                };
            }).ToList();

            totalBalance = leaveBalances.Sum(b => b.RemainingDays);
            totalUsed = leaveBalances.Sum(b => b.UsedDays);
            totalAllowed = leaveBalances.Sum(b => b.TotalDays);
        }
        catch { leaveBalances = new(); }
    }

    private void BuildMonthlySummary()
    {
        var monthStart = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1);

        monthlySummary = new()
        {
            new("Approved",  myRequests.Count(r => r.StatusId == Status.Approved  && r.StartDate >= monthStart), "success"),
            new("Pending",   myRequests.Count(r => r.StatusId == Status.Pending),                                "warning"),
            new("Rejected",  myRequests.Count(r => r.StatusId == Status.Rejected  && r.StartDate >= monthStart), "danger"),
            new("Cancelled", myRequests.Count(r => r.StatusId == Status.Cancelled),                              "secondary"),
        };
    }

    // ═══════════ HELPERS ═══════════

    private string GetLeaveTypeName(int id) =>
        leaveTypeNames.TryGetValue(id, out var n) ? n : $"Leave #{id}";

    private static string FormatName(string name) =>
        System.Text.RegularExpressions.Regex.Replace(name ?? "", "([A-Z])", " $1").Trim();

    private static string GetColor(int idx) => (idx % 5) switch
    {
        0 => "primary",
        1 => "success",
        2 => "warning",
        3 => "info",
        4 => "danger",
        _ => "secondary"
    };

    private static string StatusBadge(Status s) => s switch
    {
        Status.Approved => "bg-success",
        Status.Pending => "bg-warning text-dark",
        Status.Rejected => "bg-danger",
        Status.Cancelled => "bg-secondary",
        _ => "bg-secondary"
    };

    private static string StatusBg(Status s) => s switch
    {
        Status.Approved => "req-approved",
        Status.Pending => "req-pending",
        Status.Rejected => "req-rejected",
        _ => "req-cancelled"
    };

    private static string StatusIcon(Status s) => s switch
    {
        Status.Approved => "bi bi-check-circle-fill",
        Status.Pending => "bi bi-hourglass-split",
        Status.Rejected => "bi bi-x-circle-fill",
        Status.Cancelled => "bi bi-slash-circle",
        _ => "bi bi-question-circle"
    };
}
@page "/leaveType/create"
@page "/leaveType/edit/{Id:int}"

@using arna.HRMS.ClientServices.Admin.Employee
@using arna.HRMS.ClientServices.Admin.Role
@using arna.HRMS.ClientServices.Admin.User
@using arna.HRMS.ClientServices.Auth
@using arna.HRMS.ClientServices.Common
@using arna.HRMS.ClientServices.Leave
@using arna.HRMS.Components.Loader
@using arna.HRMS.Components.lib.components.ui.Forms
@using arna.HRMS.Components.lib.components.ui.Model
@using arna.HRMS.Models.Enums
@using arna.HRMS.Models.ViewModels
@using arna.HRMS.Models.ViewModels.Leave

@inject NavigationManager NavigationManager
@inject NotificationService NotificationService
@inject ILeaveService LeaveService

<div class="container py-4">
    <FullPageLoader Visible="isLoading" />

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                @(IsEditMode ? "Edit Leave" : "Create Leave")
            </h5>
        </div>

        <div class="card-body p-4">

            @if (!isLoading)
            {
                <EditForm Model="leaveType" OnValidSubmit="HandleValidSubmit" autocomplete="off">
                    <DataAnnotationsValidator />

                    <div class="row g-4">
                        <!-- Name -->
                        <div class="col-md-6">
                            <AppInput Label="LeaveName"
                                      Value="@nameof(leaveType.LeaveNameId)"
                                      ValueChanged="v => leaveType.LeaveNameId = Enum.TryParse<LeaveName>(v, out var parsed) ? parsed : leaveType.LeaveNameId"
                                      ValidationExpression="@(() => leaveType.LeaveNameId)">
                            </AppInput>
                        </div>

                        <!-- Days -->
                        <div class="col-md-6">
                            <AppNumberInput Label="MaxPerYear"
                                            Value="@leaveType.MaxPerYear"
                                            ValueChanged="v => leaveType.MaxPerYear = v"
                                            ValidationExpression="@(() => leaveType.MaxPerYear)">
                            </AppNumberInput>
                        </div>

                        <!-- Description -->
                        <div class="col-md-6">
                            <AppInput Label="Description"
                                      Value="@leaveType.Description"
                                      ValueChanged="v => leaveType.Description = v"
                                      ValidationExpression="@(() => leaveType.Description)">
                            </AppInput>
                        </div>

                        <div class="col-md-6 mt-4">
                            <AppCheckBox Label="IsPaid"
                                         Value="@leaveType.IsPaid"
                                         ValueChanged="@(v => leaveType.IsPaid = v)" />
                        </div>

                        <!-- Active (EDIT ONLY) -->
                        @if (IsEditMode)
                        {
                            <div class="col-md-6 mt-4">
                                <AppCheckBox Label="Active"
                                             Value="@leaveType.IsActive"
                                             ValueChanged="@(v => leaveType.IsActive = v)" />
                            </div>
                        }
                    </div>

                    <div class="mt-5 d-flex justify-content-end gap-3">
                        <AppButton Text="Back"
                                   ButtonClass="btn btn-outline-dark px-4"
                                   OnClick="GoBack" />

                        <AppButton Text="@(IsEditMode ? "Update" : "Save")"
                                   Type="submit"
                                   ButtonClass="btn btn-primary px-5" />
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }
    private LeaveTypeViewModel leaveType = new();
    private bool isLoading = true;
    private bool IsEditMode => Id.HasValue;

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;

        if (IsEditMode)
        {
            var result = await LeaveService.GetLeaveTypeByIdAsync(Id!.Value);

            if (result.IsSuccess && result.Data != null)
            {
                leaveType = result.Data;
            }
            else
            {
                NotificationService.Error(result.Message ?? "Leave Type not found.");
                NavigationManager.NavigateTo("/leaveType");
            }
        }
        else
        {
            leaveType = new LeaveTypeViewModel();
        }

        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {
        if (IsEditMode)
        {
            var result = await LeaveService.UpdateLeaveTypeAsync(Id!.Value, leaveType);

            if (!result.IsSuccess)
            {
                NotificationService.Error(result.Message ?? "Unable to update leave Type.");
                return;
            }

            NotificationService.Success("Leave Type updated successfully.");
        }
        else
        {
            var result = await LeaveService.CreateLeaveTypeAsync(leaveType);

            if (!result.IsSuccess)
            {
                NotificationService.Error(result.Message ?? "Unable to create leave Type.");
                return;
            }

            NotificationService.Success("Leave Type created successfully.");
        }

        NavigationManager.NavigateTo("/leaveType");
    }

    private void GoBack() => NavigationManager.NavigateTo("/leaveType");
}

@page "/role"

@using arna.HRMS.ClientServices.Admin.Role
@using arna.HRMS.ClientServices.Common
@using arna.HRMS.Components.Loader
@using arna.HRMS.Components.lib.components.ui.Forms
@using arna.HRMS.Models.Common.Table
@using arna.HRMS.Models.ViewModels

@inject NavigationManager NavigationManager
@inject IRoleService RoleService
@inject NotificationService NotificationService
@inject IJSRuntime JsRuntime

<FullPageLoader Visible="isLoading" />

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Roles</h3>

        <AppButton cssclass="btn btn-success" Text="Add Role" OnClick="@(() => NavigationManager.NavigateTo("/role/create"))">
            <i class="bi bi-plus-lg"></i>
        </AppButton>
    </div>

    <AppTable TItem="RoleViewModel"
              Items="roles"
              Columns="TableSchemas.Roles"
              OnEdit="EditRole"
              OnDelete="DeleteRole" />
</div>

@code {
    private List<RoleViewModel> roles = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        isLoading = true;

        var result = await RoleService.GetRolesAsync();

        if (result.IsSuccess && result.Data != null)
        {
            roles = result.Data;
        }
        else if (!result.IsSuccess)
        {
            NotificationService.Error(result.Message ?? "Failed to load roles");
            roles = new List<RoleViewModel>();
        }
        else
        {
            roles = new List<RoleViewModel>();
        }

        isLoading = false;
    }

    private void EditRole(RoleViewModel model)
    {
        NavigationManager.NavigateTo($"/role/edit/{model.Id}");
    }

    private async Task DeleteRole(RoleViewModel model)
    {
        bool isConfirmed = await JsRuntime.InvokeAsync<bool>(
            "confirm",
            "Are you sure you want to delete this role?" 
        );

        if (!isConfirmed)
            return;

        var result = await RoleService.DeleteRoleAsync(model.Id);

        if (!result.IsSuccess)
        {
            NotificationService.Error(result.Message ?? "Unable to delete role.");
            return;
        }

        NotificationService.Success("Role deleted successfully.");
        await LoadRoles();
    }
}

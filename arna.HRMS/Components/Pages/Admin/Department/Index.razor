@page "/department"

@using arna.HRMS.ClientServices.Admin.Department
@using arna.HRMS.ClientServices.Common
@using arna.HRMS.Components.Loader
@using arna.HRMS.Components.lib.components.ui.Forms
@using arna.HRMS.Models.Common.Table
@using arna.HRMS.Models.ViewModels

@inject NavigationManager NavigationManager
@inject IDepartmentService DepartmentService
@inject NotificationService NotificationService
@inject IJSRuntime JsRuntime

<Loader Visible="_isLoading" Message="@_loadingMessage" />

<div class="container-fluid px-3 px-md-4 py-3 py-md-4">

    <!-- ═══════════ HEADER ═══════════ -->
    <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center
                justify-content-between gap-3 gap-sm-4 mb-4 mb-md-5">
        <div class="d-flex align-items-start gap-3">
            <div class="dept-header-icon bg-primary bg-opacity-10 text-primary rounded-2
                        d-inline-flex align-items-center justify-content-center flex-shrink-0">
                <i class="bi bi-diagram-3-fill"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-2 fs-5 fs-md-4">Departments</h4>
                <p class="text-muted mb-0 small d-none d-sm-block">
                    Manage your organization's department structure
                </p>
            </div>
        </div>

        <button class="btn btn-primary btn-sm rounded-pill px-4 dept-add-btn w-100 w-sm-auto"
                @onclick="@(() => NavigateTo("/department/create"))">
            <i class="bi bi-plus-lg me-1"></i>
            <span class="d-none d-sm-inline">Add Department</span>
            <span class="d-sm-none">Add</span>
        </button>
    </div>

    <!-- ═══════════ STAT CARDS ═══════════ -->
    <div class="row g-2 g-sm-3 mb-4 mb-md-5">
        @foreach (var stat in StatCards)
        {
            <div class="col-6 col-md-3">
                <div class="card border-0 shadow-sm rounded-3 dept-stat-card h-100">
                    <div class="card-body text-center py-3 py-md-4 px-3">
                        <div class="dept-stat-icon @stat.BgClass mx-auto mb-2">
                            <i class="bi @stat.Icon @stat.TextClass"></i>
                        </div>
                        <div class="fs-4 fw-bold @stat.TextClass mb-2">@stat.Count</div>
                        <small class="text-muted fw-semibold text-uppercase dept-stat-label">
                            @stat.Label
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- ═══════════ SEARCH BAR ═══════════ -->
    <div class="card border-0 shadow-sm rounded-3 mb-4">
        <div class="card-body py-3 px-3 px-md-4">
            <div class="d-flex align-items-center justify-content-between gap-3 flex-wrap">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-search text-primary"></i>
                    <span class="fw-medium text-muted small">Filter</span>
                </div>

                <div class="flex-grow-1" style="min-width: 250px;">
                    <input type="text"
                           class="form-control form-control-sm border-0 bg-light rounded-pill"
                           placeholder="Search by name or code..."
                           @bind="_searchTerm"
                           @bind:event="oninput" />
                </div>

                @if (!string.IsNullOrWhiteSpace(_searchTerm))
                {
                    <button class="btn btn-sm btn-outline-secondary rounded-pill px-3"
                            @onclick="ClearSearch">
                        <i class="bi bi-x-lg me-1"></i>
                        <span class="d-none d-sm-inline">Clear</span>
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- ═══════════ TABLE ═══════════ -->
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-header bg-white border-bottom py-3 px-3 px-md-4">
            <div class="d-flex align-items-center justify-content-between">
                <h6 class="fw-semibold mb-0 small">
                    <i class="bi bi-table text-primary me-2"></i>
                    <span class="d-none d-sm-inline">Department Directory</span>
                    <span class="d-sm-none">Directory</span>
                </h6>
                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2">
                    @FilteredDepartments.Count
                    <span class="d-none d-sm-inline ms-1">departments</span>
                </span>
            </div>
        </div>

        <div class="card-body p-0">
            @if (_isLoading)
            {
                <div class="text-center py-5 py-md-6">
                    <div class="spinner-border text-primary mb-3" role="status"></div>
                    <p class="text-muted mb-0 small">Loading departments…</p>
                </div>
            }
            else if (!FilteredDepartments.Any())
            {
                <div class="text-center py-5 py-md-6 px-3">
                    <div class="dept-empty-icon bg-light rounded-3 d-inline-flex
                                    align-items-center justify-content-center mx-auto mb-3">
                        <i class="bi bi-inbox fs-1 text-muted opacity-50"></i>
                    </div>
                    <h6 class="fw-semibold text-muted mb-2">No Departments Found</h6>
                    <p class="text-muted small mb-4 dept-empty-text mx-auto">
                        @if (!string.IsNullOrWhiteSpace(_searchTerm))
                        {
                            <span>No departments match "<strong>@_searchTerm</strong>"</span>
                        }
                        else
                        {
                            <span>No departments have been added yet.</span>
                        }
                    </p>
                    @if (!string.IsNullOrWhiteSpace(_searchTerm))
                    {
                        <button class="btn btn-sm btn-outline-primary rounded-pill px-4"
                                @onclick="ClearSearch">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Clear Search
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-primary rounded-pill px-4"
                                @onclick="@(() => NavigateTo("/department/create"))">
                            <i class="bi bi-plus-lg me-1"></i>Add First Department
                        </button>
                    }
                </div>
            }
            else
            {
                <div class="dept-table-scroll">
                    <AppTable TItem="DepartmentViewModel"
                              Items="FilteredDepartments"
                              Columns="TableSchemas.Departments"
                              OnEdit="EditDepartment"
                              OnDelete="DeleteDepartment" />
                </div>
            }
        </div>
    </div>
</div>

@code {

    // ═══════════ STATE ═══════════

    private List<DepartmentViewModel> _departments = new();
    private bool _isLoading = true;
    private string _loadingMessage = "Loading departments...";
    private string? _searchTerm;

    // ═══════════ COMPUTED ═══════════

    private List<DepartmentViewModel> FilteredDepartments
        => string.IsNullOrWhiteSpace(_searchTerm)
            ? _departments
            : _departments
                .Where(d =>
                    MatchesSearch(d.Name) ||
                    MatchesSearch(d.Code) ||
                    MatchesSearch(d.Description))
                .ToList();

    private IEnumerable<StatCardModel> StatCards => new[]
    {
        new StatCardModel("bi-diagram-3-fill", "bg-primary bg-opacity-10", "text-primary", _departments.Count,                    "Total"),
        new StatCardModel("bi-check-circle-fill", "bg-success bg-opacity-10", "text-success", _departments.Count(d => d.IsActive),  "Active"),
        new StatCardModel("bi-x-circle-fill",  "bg-danger bg-opacity-10",  "text-danger",  _departments.Count(d => !d.IsActive),  "Inactive"),
        new StatCardModel("bi-diagram-2-fill", "bg-info bg-opacity-10",    "text-info",    _departments.Count(d => d.ParentDepartmentId == null), "Root"),
    };

    // ═══════════ LIFECYCLE ═══════════

    protected override async Task OnInitializedAsync()
    {
        await LoadDepartmentsAsync();
    }

    // ═══════════ DATA ═══════════

    private async Task LoadDepartmentsAsync()
    {
        _isLoading = true;

        var result = await DepartmentService.GetDepartmentsAsync();

        if (result.IsSuccess && result.Data != null)
        {
            _departments = result.Data;
        }
        else if (!result.IsSuccess)
        {
            NotificationService.Error(result.Message ?? "Failed to load departments");
            _departments = new List<DepartmentViewModel>();
        }
        else
        {
            _departments = new List<DepartmentViewModel>();
        }

        _isLoading = false;
    }

    // ═══════════ EVENTS ═══════════

    private void NavigateTo(string route)
        => NavigationManager.NavigateTo(route);

    private void EditDepartment(DepartmentViewModel model)
        => NavigationManager.NavigateTo($"/department/edit/{model.Id}");

    private async Task DeleteDepartment(DepartmentViewModel model)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>(
            "confirm", "Are you sure you want to delete this department?");

        if (!confirmed) return;

        var result = await DepartmentService.DeleteDepartmentAsync(model.Id);

        if (!result.IsSuccess)
        {
            NotificationService.Error(result.Message ?? "Unable to delete department.");
            return;
        }

        NotificationService.Success("Department deleted successfully.");
        await LoadDepartmentsAsync();
    }

    private void ClearSearch() => _searchTerm = null;

    // ═══════════ HELPERS ═══════════

    private bool MatchesSearch(string? value)
        => !string.IsNullOrWhiteSpace(value) &&
           value.Contains(_searchTerm!, StringComparison.OrdinalIgnoreCase);

    // ═══════════ INNER TYPES ═══════════

    private record StatCardModel(
        string Icon, string BgClass, string TextClass, int Count, string Label);
}
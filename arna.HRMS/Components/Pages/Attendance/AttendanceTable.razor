@using arna.HRMS.Models.DTOs

<div class="table-card">
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Day</th>
                    <th>Clock In</th>
                    <th>Clock Out</th>
                    <th>Working Hours</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in AttendanceList)
                {
                    <tr class="@(string.IsNullOrEmpty(item.Status) ? "future-row" : "")">
                        <td>@item.Date.ToString("dd MMM yyyy")</td>
                        <td>@item.Day</td>
                        <td>@(item.ClockIn?.ToString(@"hh\:mm") ?? "-")</td>
                        <td>@(item.ClockOut?.ToString(@"hh\:mm") ?? "-")</td>
                        <td>@(item.TotalHours > 0 ? item.TotalHours.ToString("0.00") : "-")</td>
                        <td>
                            @if (string.IsNullOrEmpty(item.Status))
                            {
                                <span class="status-muted">—</span>
                            }
                            else
                            {
                                <span class="status-pill status-@item.Status.ToLower()">
                                    @item.Status
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public List<MonthlyAttendanceDto> AttendanceList { get; set; } = new();
}

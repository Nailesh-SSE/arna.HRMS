@page "/"
@inject NavigationManager NavigationManager
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthProvider

<PageTitle>Home</PageTitle>

@if (IsLoading)
{
    <div class="text-center">
        <Spinner Type="SpinnerType.Border" />
    </div>
}
else if (IsAuthenticated)
{
    <h4 class="fw-bold mb-4">My Access</h4>

    <div class="container">
        <div class="row justify-content-center g-4 text-center">
            @foreach (var item in MenuItems)
            {
                <div class="col-6 col-md-2">
                    <div class="ratio ratio-1x1 mx-auto" style="max-width:150px;">
                        <div class="card shadow-sm border-0 menu-card"
                             role="button"
                             @onclick="() => NavigateTo(item.Route)">
                            <img src="@item.Icon"
                                 style="width:110%; height:110%; object-fit:contain;" />
                        </div>
                    </div>
                    <small class="fw-semibold d-block mt-1">@item.Label</small>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
        <div class="spinner-border text-primary"></div>
        <p class="ms-3 text-muted">Redirecting to login...</p>
    </div>
}

@code {
    private bool IsAuthenticated;
    private bool IsLoading = true;
    private bool _redirectInitiated;
    private string CurrentUserFullName = string.Empty;
    private record MenuItem(string Label, string Icon, string Route);

    protected override async Task OnInitializedAsync()
    {
        AuthProvider.AuthenticationStateChanged += OnAuthStateChanged;

        var authState = await AuthProvider.GetAuthenticationStateAsync();
        await UpdateAuthState(authState);
    }

    private async void OnAuthStateChanged(Task<AuthenticationState> task)
    {
        var authState = await task;
        await UpdateAuthState(authState);
    }

    private async Task UpdateAuthState(AuthenticationState authState)
    {
        var user = authState.User;

        IsAuthenticated = user.Identity?.IsAuthenticated == true;

        if (IsAuthenticated)
        {
            CurrentUserFullName =
                user.FindFirst(ClaimTypes.Name)?.Value
                ?? user.Identity?.Name
                ?? "User";
        }

        IsLoading = false;
        await InvokeAsync(StateHasChanged);

        if (!IsAuthenticated && !_redirectInitiated)
        {
            _redirectInitiated = true;
            NavigationManager.NavigateTo("/login");
        }
    }

    private readonly List<MenuItem> MenuItems = new()
    {
        new("Task Box", "icons/Task.png", "/taskbox"),
        new("Employees", "icons/employees.png", "/employee/employeelist"),
        new("Time Sheet", "icons/time.png", "/timesheet"),
        new("Performance", "icons/performance.png", "/performance"),
        new("Project", "icons/project.png", "/project"),
        new("Leave Request", "icons/leaveRequest.png", "/leaverequest"),
        new("PIP", "icons/pip.png", "/pip")
    };

    private void NavigateTo(string route)
    {
        NavigationManager.NavigateTo(route);
    }

    public void Dispose()
    {
        AuthProvider.AuthenticationStateChanged -= OnAuthStateChanged;
    }
}

@using Microsoft.AspNetCore.Components.Authorization
@using arna.HRMS.ClientServices.Auth

@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject IAuthService AuthService

<AuthorizeView>
    <Authorized>
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle"
                    data-bs-toggle="dropdown">
                <Icon Name="IconName.PersonCircle" />
                @context.User.Identity?.Name
            </button>

            <ul class="dropdown-menu dropdown-menu-end">
                <li class="px-3 py-2">
                    <small class="text-muted">Welcome back</small><br />
                    <strong>
                        @context.User.FindFirst("Name")?.Value
                    </strong>
                </li>

                <li><hr class="dropdown-divider" /></li>

                <li>
                    <button class="dropdown-item text-danger"
                            @onclick="HandleLogout">
                        <Icon Name="IconName.BoxArrowRight" />
                        Logout
                    </button>
                </li>
            </ul>
        </div>
    </Authorized>

    <NotAuthorized>
        <button class="btn btn-outline-primary"
                @onclick="@(() => Navigation.NavigateTo("/login"))">
            <Icon Name="IconName.Person" />
            Login
        </button>
    </NotAuthorized>
</AuthorizeView>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login"); 
    }
}
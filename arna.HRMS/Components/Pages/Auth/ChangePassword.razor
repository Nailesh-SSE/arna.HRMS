@page "/change-password"
@layout LoginLayout

@using System.ComponentModel.DataAnnotations
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using arna.HRMS.Components.Layout
@using arna.HRMS.Services
@using arna.HRMS.Services.Auth

@inject ILogger<ChangePassword> Logger
@inject NavigationManager NavigationManager
@inject IUserService UserService
@inherits AuthenticatedLayoutBase

<style>
    .login-background {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 15px !important;
    }

    .card-background {
        max-width: 420px;
        width: 100%;
        border-radius: 10px;
    }

</style>

<PageTitle>Arna Technosoft - Login</PageTitle>

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center login-background">
    <div class="card shadow-sm border-0 card-background">
        <div class="card-body p-4">

            <div class="text-center mb-4">
                <img src="Images/ArnaLogo.png"
                     class="img-fluid mb-3"
                     style="max-height:70px;"
                     alt="Arna Technosoft" />
                <h5 class="fw-semibold">Sign in to your account</h5>
            </div>

            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                <div class="alert alert-danger text-center py-2">
                    @errorMessage
                </div>
            }

            <EditForm Model="@changePasswordModel" OnValidSubmit="HandleChangePassword">
                <DataAnnotationsValidator />

                <div class="mb-4">
                    <label class="form-label fw-semibold">New Password</label>
                    <div class="input-group">
                        <InputText @bind-Value="changePasswordModel.NewPassword"
                                   type="@passwordInputType"
                                   class="form-control"
                                   placeholder="Enter new password" />
                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="ToggleNewPasswordVisibility">
                            <i class="bi @(showNewPassword ? "bi-eye-slash" : "bi-eye")"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => changePasswordModel.NewPassword)" class="text-danger small" />
                </div>
                <div class="mb-4">
                    <label class="form-label fw-semibold">Confirm Password</label>
                    <div class="input-group">
                        <InputText @bind-Value="changePasswordModel.ConfirmPassword"
                                   type="@confirmPasswordInputType"
                                   class="form-control"
                                   placeholder="Enter new confirm password" />
                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="ToggleConfirmPasswordVisibility">
                            <i class="bi @(showConfirmPassword ? "bi-eye-slash" : "bi-eye")"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => changePasswordModel.ConfirmPassword)" class="text-danger small" />
                </div>

                <div class="d-grid">
                    <button type="submit"
                            class="btn btn-primary btn-lg"
                            disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Sign In
                    </button>
                </div>
            </EditForm>

        </div>
    </div>
</div>

@code {
    private ChangePasswordModel changePasswordModel = new();
    private string? errorMessage;
    private bool isLoading;
    private bool showNewPassword;
    private bool showConfirmPassword;
    private string? successMessage;

    private string passwordInputType => showNewPassword ? "text" : "password";
    private string confirmPasswordInputType => showConfirmPassword ? "text" : "password";

    private async Task HandleChangePassword()
    {
        errorMessage = null;
        successMessage = null;
        isLoading = true;

        try
        {
            var userId = GetUserId();
            if (userId == 0)
            {
                errorMessage = "Invalid user.";
                return;
            }

            var userData = await UserService.GetUserByIdAsync(userId);
            if (userData == null)
            {
                errorMessage = "User not found.";
                return;
            }
            
            if (changePasswordModel.NewPassword != changePasswordModel.ConfirmPassword)
            {
                errorMessage = "New password and confirm password do not match.";
                return;
            }

            var result = await UserService.ChangeUserPasswordAsync(userId, changePasswordModel.NewPassword);

            if (!result.IsSuccess)
            {
                errorMessage = "Failed to change password.";
                return;
            }

            successMessage = "Password changed successfully.";
            changePasswordModel = new ChangePasswordModel();
            NavigationManager.NavigateTo("/");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Change password failed");
            errorMessage = "Something went wrong while changing the password.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleNewPasswordVisibility()
    {
        showNewPassword = !showNewPassword;
    }
    private void ToggleConfirmPasswordVisibility()
    {
        showConfirmPassword = !showConfirmPassword;
    }

    public class ChangePasswordModel
    {
        [Required]
        public string NewPassword { get; set; } = string.Empty;

        [Required]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}

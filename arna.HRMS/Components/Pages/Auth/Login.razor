@page "/login"
@layout LoginLayout
@using Microsoft.AspNetCore.Authorization
@using arna.HRMS.Components.Layout
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Identity.Data
@using arna.HRMS.ClientServices.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider


<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-box {
        background: white;
        border-radius: 10px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        overflow: hidden;
    }

    .login-header {
        padding: 30px 20px 20px;
        text-align: center;
    }

    .logo {
        max-width: 160px;
        height: auto;
    }

    .company-name {
        color: #2c3e50;
        font-size: 24px;
        font-weight: 600;
        margin: 0;
        letter-spacing: 0.5px;
    }

    .login-body {
        padding: 30px;
    }

    .login-message {
        text-align: center;
        color: #6c757d;
        margin-bottom: 30px;
        font-size: 14px;
        font-weight: 500;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .input-container {
        position: relative;
        display: flex;
        align-items: center;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        color: #6c757d;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
    }

    .form-input {
        width: 100%;
        padding: 14px 45px 14px 45px;
        border: 1px solid #dcdfe6;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s ease;
        background: #fff;
        color: #333;
    }

        .form-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-1px);
        }

        .form-input::placeholder {
            color: #a0a4a8;
        }

    .password-toggle {
        position: absolute;
        right: 15px;
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        padding: 0;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 3;
    }

        .password-toggle:hover {
            color: #667eea;
        }

    .login-button {
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 6px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

        .login-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 20px rgba(102, 126, 234, 0.4);
        }

        .login-button:active {
            transform: translateY(0);
        }

    .alert {
        padding: 12px 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-size: 14px;
        text-align: center;
    }

    .alert-error {
        background-color: #fee;
        color: #c33;
        border: 1px solid #fdd;
        font-weight: 500;
    }

    /* Responsive adjustments */
    @@media (max-width: 480px) {
        .login-box {
            margin: 10px;
        }

        .login-body {
            padding: 25px 20px;
        }

        .login-header {
            padding: 30px 20px 15px;
        }

        .company-name {
            font-size: 22px;
        }
    }

    /* Add some smooth animations */
    .login-box {
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<PageTitle>Arna Technosoft - Login</PageTitle>

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="logo-container">
                <img src="Images/ArnaLogo.png" alt="Arna Technosoft" class="logo" />
            </div>
        </div>

        <div class="login-body">
            <p class="login-message">Sign in to start your session</p>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mb-3" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @errorMessage
                </div>
            }

            <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <div class="input-container">
                        <span class="input-icon">
                            <Icon Name="IconName.Envelope" />
                        </span>
                        <InputText @bind-Value="loginModel.Username"
                                   class="form-input"
                                   placeholder="User Name" autofocus />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Username)" class="text-danger small mt-1" />
                </div>

                <div class="form-group">
                    <div class="input-container">
                        <span class="input-icon">
                            <Icon Name="IconName.Lock" />
                        </span>
                        <InputText @bind-Value="loginModel.Password"
                                   class="form-input"
                                   placeholder="Password"
                                   type="@passwordInputType" />
                        <button type="button" class="password-toggle" @onclick="TogglePasswordVisibility">
                            <i class="@passwordToggleIcon"></i>
                        </button>
                    </div>
                    <ValidationMessage For="@(() => loginModel.Password)" class="text-danger small mt-1" />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary login-btn" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        SIGN IN
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

</div>


@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private bool isLoading;
    private bool showPassword;
    private string? returnUrl;

    private string passwordInputType => showPassword ? "text" : "password";
    private string passwordToggleIcon => showPassword ? "bi bi-eye-slash" : "bi bi-eye";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            NavigationManager.NavigateTo("/", true);
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await AuthService.LoginAsync(new LoginRequest
                {
                    Email = loginModel.Username,
                    Password = loginModel.Password
                });

            if (response.IsSuccess)
            {
                var authProvider = AuthStateProvider as CustomAuthStateProvider;
                if (authProvider != null)
                {
                    await authProvider.MarkUserAsAuthenticated(new AuthData
                    {
                        UserId = response.UserId.ToString(),
                        UserName = response.Username ?? loginModel.Username,
                        UserFullName = response.FullName ?? loginModel.Username,
                        IsAuthenticated = true,
                        LoginTime = DateTime.UtcNow
                    });

                    Logger.LogInformation("User {Username} logged in successfully", loginModel.Username);
                    await NavigateToReturnUrl();
                }
                else
                {
                    errorMessage = "Authentication service not available";
                }
            }
            else
            {
                errorMessage = response.Message ?? "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Login failed");
            errorMessage = "Something went wrong. Please try again.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task NavigateToReturnUrl()
    {
        if (!string.IsNullOrEmpty(returnUrl))
        {
            // Validate the return URL to prevent open redirect attacks
            if (IsValidReturnUrl(returnUrl))
            {
                NavigationManager.NavigateTo(returnUrl, false);
            }
            else
            {
                NavigationManager.NavigateTo("/", false);
            }
        }
        else
        {
            NavigationManager.NavigateTo("/", false);
        }
    }

    private bool IsValidReturnUrl(string url)
    {
        if (string.IsNullOrEmpty(url))
            return false;

        // Ensure the URL is relative and doesn't contain suspicious characters
        return url.StartsWith("/") &&
               !url.Contains("://") &&
               !url.Contains("..") &&
               !url.ToLower().Contains("<script") &&
               !url.ToLower().Contains("javascript:");
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Username is required")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = "";
    }
}

@using arna.HRMS.Models.ViewModels.Leave
@using arna.HRMS.Models.Enums

<div class="summary-section">
    <h3 class="summary-title">Your Leave Balance</h3>
    @if (Summaries == null || Summaries.Count == 0)
    {
        <div class="empty-state">
            <p>No leave balance data available</p>
        </div>
    }
    else
    {
        <div class="summary-grid">
            @foreach (var s in Summaries)
            {
                <div class="summary-card @(s.RemainingLeaves == 0 ? "exhausted" : "")">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="mb-1" style="font-weight:700">@s.LeaveMasterName</h5>
                            <div class="text-muted small">@s.UsedLeaves used • @s.RemainingLeaves remaining</div>
                        </div>
                        <div class="text-end">
                            <div class="h3 mb-0 text-primary">@s.RemainingLeaves</div>
                            <div class="small text-muted">of @s.TotalLeaves days</div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="progress" style="height:10px; border-radius:8px; overflow:hidden; background:#eef2ff">
                            <div class="progress-bar @GetProgressColorClass(s)" role="progressbar" style="width:@GetPercent(s)%">&nbsp;</div>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <small class="text-muted">Used: @s.UsedLeaves</small>
                            <small class="text-muted">@GetPercent(s)%</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public List<EmployeeLeaveBalanceViewModel> Summaries { get; set; } = new();
    [Parameter] public List<LeaveMasterViewModel>? LeaveMasters { get; set; } = new();

    private int GetPercent(EmployeeLeaveBalanceViewModel s)
        => s.TotalLeaves == 0 ? 0 : (int)((s.UsedLeaves * 100.0) / s.TotalLeaves);

    private string GetProgressColorClass(EmployeeLeaveBalanceViewModel s)
    {
        var percent = GetPercent(s);
        return percent switch
        {
            >= 80 => "progress-critical",
            >= 60 => "progress-warning",
            _ => "progress-healthy"
        };
    }
}

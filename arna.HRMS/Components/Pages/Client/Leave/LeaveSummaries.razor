@using arna.HRMS.Models.ViewModels.Leave

<div class="summary-section">

    <h3 class="summary-title">Your Leave Balance</h3>

    @if (displaySummaries.Count == 0)
    {
        <div class="text-muted">No leave configuration found.</div>
    }
    else
    {
        <div class="summary-grid">
            @foreach (var s in displaySummaries)
            {
                <div class="summary-card @(s.RemainingDays == 0 ? "exhausted" : "")">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="mb-1" style="font-weight:700">@s.LeaveTypeName</h5>
                            <div class="text-muted small">@s.UsedDays used • @s.RemainingDays remaining</div>
                        </div>
                        <div class="text-end">
                            <div class="h3 mb-0 text-primary">@s.RemainingDays</div>
                            <div class="small text-muted">of @s.TotalDays days</div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="progress" style="height:10px; border-radius:8px; overflow:hidden; background:#eef2ff">
                            <div class="progress-bar @GetProgressColorClass(s)" role="progressbar" style="width:@GetPercent(s)%">&nbsp;</div>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <small class="text-muted">Used: @s.UsedDays</small>
                            <small class="text-muted">@GetPercent(s)%</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public List<LeaveBalanceViewModel> Summaries { get; set; } = new();
    [Parameter] public List<LeaveTypeViewModel>? LeaveTypes { get; set; } = new();

    private List<LeaveBalanceViewModel> displaySummaries = new();

    protected override void OnParametersSet()
    {
        displaySummaries = (Summaries?.Any() == true)
            ? Summaries
            : BuildDefaultSummaries();
    }

    private List<LeaveBalanceViewModel> BuildDefaultSummaries()
    {
        if (LeaveTypes == null || !LeaveTypes.Any())
            return new();

        return LeaveTypes.Select(m => new LeaveBalanceViewModel
        {
            LeaveTypeId = m.Id,
            LeaveTypeName = m.LeaveNameId.ToString(),
            TotalDays = m.MaxPerYear,
            UsedDays = 0,
        }).ToList();
    }

    private int GetPercent(LeaveBalanceViewModel s)
        => s.TotalDays == 0 ? 0 : (int)((s.UsedDays * 100.0) / s.TotalDays);

    private string GetProgressColorClass(LeaveBalanceViewModel s)
        => GetPercent(s) switch
        {
            >= 80 => "progress-critical",
            >= 60 => "progress-warning",
            _ => "progress-healthy"
        };
}

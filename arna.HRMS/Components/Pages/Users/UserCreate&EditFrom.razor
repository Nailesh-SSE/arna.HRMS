@page "/users/create"
@page "/users/edit/{Id:int}"

@using arna.HRMS.ClientServices.Auth
@using arna.HRMS.ClientServices.Employee
@using arna.HRMS.ClientServices.Users
@using arna.HRMS.Components.Common
@using arna.HRMS.Components.lib.components.ui.Forms
@using arna.HRMS.Components.lib.components.ui.Model
@using arna.HRMS.Core.Enums
@using arna.HRMS.Models.DTOs
@using arna.HRMS.ClientServices.Common

@inject IUsersService UsersService
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@inject NotificationService NotificationService

<div class="container py-4">
    <FullPageLoader Visible = "isLoading"/>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                @(IsEditMode ? "Edit User" : "Create User")
            </h5>
        </div>

        <div class="card-body p-4">

            @if (!isLoading)
            {
                <EditForm Model="user" OnValidSubmit="HandleValidSubmit" autocomplete="off">
                    <DataAnnotationsValidator />

                    <div class="row g-4">
                        <!-- Username -->
                        <div class="col-md-6">
                            <AppInput Label="Username"
                                      Value="@user.Username"
                                      ValueChanged="v => user.Username = v" >
                                <input autocomplete="off" hidden />
                            </AppInput>
                            <ValidationMessage For="@(() => user.Username)" />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <AppInput Label="Email"
                                      Type="email"
                                      Value="@user.Email"
                                      ValueChanged="@(v => user.Email = v)">
                                <input autocomplete="off" hidden />
                            </AppInput>
                            <ValidationMessage For="@(() => user.Email)" />
                        </div>

                        <!-- First Name -->
                        <div class="col-md-6">
                            <AppInput Label="First Name"
                                      Value="@user.FirstName"
                                      ValueChanged="@(v => user.FirstName = v)">
                                <input autocomplete="off" hidden />
                            </AppInput>
                            <ValidationMessage For="@(() => user.FirstName)" />
                        </div>

                        <!-- Last Name -->
                        <div class="col-md-6">
                            <AppInput Label="Last Name" 
                                      Value="@user.LastName" 
                                      ValueChanged="v => user.LastName=v">
                                <input autocomplete="off" hidden />
                            </AppInput>
                            <ValidationMessage For="@(() => user.LastName)" />
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6">
                            <AppInput Label="Phone Number"
                                      Value="user.PhoneNumber"
                                      ValueChanged="v => user.PhoneNumber = v">
                                <input autocomplete="off" hidden />
                            </AppInput>
                            <ValidationMessage For="@(() => user.PhoneNumber)" />
                        </div>

                        <!-- Employee -->
                        @* <div class="col-md-6">
                            <label class="form-label">Employee</label>
                            <InputSelect class="form-select"
                            @bind-Value="user.EmployeeId">
                                <option value="">Select Employee</option>
                                @foreach (var emp in employees)
                                {
                                    <option value="@emp.Id">@emp.FullName</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => user.EmployeeId)" />
                        </div> *@

                        <!-- ROLE -->
                        <div class="col-md-6">
                            <AppSelect Label="Role"
                                       Options="RoleOptions"
                                       Value="@user.Role?.ToString()"
                                       ValueChanged="v =>
                                       {
                                            user.Role = Enum.TryParse<UserRole>(v, out var role)
                                                        ? role
                                                        : null;
                                       }" 
                        />

                            <ValidationMessage For="@(() => user.Role)" />
                        </div>
                        @*
                            <AppInput Label="Password"
                                      Type="password" 
                                      autocomplete="new-password"
                                      Value="@user.Password"
                                      ValueChanged="v => user.Password=v" />
                        *@
                        <!-- PASSWORD -->
                        <div class="col-md-6">
                           <AppInput Label="Password"
                              Type="password"
                              Value="@user.Password"
                              autocomplete="new-password"/>
                            <ValidationMessage For="@(() => user.Password)" />
                        </div>

                        <!-- Active (EDIT ONLY) -->
                        @if (IsEditMode)
                        {
                            <div class="col-md-6 mt-4">
                                <AppCheckBox Label="Active"
                                             Value="@user.IsActive"
                                             ValueChanged="@(v => user.IsActive = v)" />
                            </div>
                        }
                    </div>

                    <div class="mt-5 d-flex justify-content-end gap-3">
                        <AppButton Text="Back"
                                   CssClass="btn btn-outline-secondary px-4"
                                   OnClick="GoBack" />

                        <AppButton Text="@(IsEditMode ? "Update" : "Save")"
                                   Type="submit"
                                   CssClass="btn btn-primary px-5" />
                    </div>
                </EditForm>
            }
        </div>
    </div>

</div>

@code {
    [Parameter] public int? Id { get; set; }
    private UserDto user = new();
    private bool isLoading = true;
    private bool IsEditMode => Id.HasValue;
    private List<EmployeeDto> employees = new();

    private List<SelectOption> RoleOptions = Enum
       .GetValues<UserRole>()
       .Select(r => new SelectOption
       {
           Value = r.ToString(),
           Text = r.ToString()
       })
       .ToList();

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;

        var employeeResult = await EmployeeService.GetEmployeesAsync();
        if (employeeResult.IsSuccess && employeeResult.Data != null)
        {
            employees = employeeResult.Data.ToList();
        }
        else
        {
            employees = new(); 
        }

        if (IsEditMode)
        {
            var result = await UsersService.GetUserByIdAsync(Id!.Value);

            if (result.IsSuccess && result.Data != null)
            {
                user = result.Data;
            }
            else
            {
                NotificationService.Error($"User not found ({result.StatusCode}): {result.Message ?? "User not found."}");
                NavigationManager.NavigateTo("/users");
            }
        }
        else
        {
            user = new UserDto
            {
                IsActive = true,
                Role = null
            };
        }

        isLoading = false;
    }

    private async Task HandleValidSubmit()
    {
        if (IsEditMode)
        {
            var result = await UsersService.UpdateUserAsync(Id!.Value, user);

            if (!result.IsSuccess)
            {
                NotificationService.Error($"Update failed ({result.StatusCode}): {result.Message ?? "Unable to update user."}");
                return;
            }

            NotificationService.Success("User updated successfully.");
        }
        else
        {
            var result = await UsersService.CreateUserAsync(user);

            if (!result.IsSuccess)
            {
                NotificationService.Error($"Create failed ({result.StatusCode}): {result.Message ?? "Unable to create user."}");
                return;
            }

            NotificationService.Success("User created successfully.");
        }

        NavigationManager.NavigateTo("/users");
    }

    private void GoBack() => NavigationManager.NavigateTo("/users");
}

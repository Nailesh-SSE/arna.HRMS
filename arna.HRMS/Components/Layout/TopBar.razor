@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using arna.HRMS.Components.Pages.Auth

@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<header class="bg-white border-bottom px-4 py-3
               d-flex justify-content-between align-items-center sticky-top">

    <h5 class="mb-0">
        @Greeting@if (!string.IsNullOrEmpty(FullName))
        {
            <span>, @FullName</span>
        }
    </h5>

    <div class="d-flex align-items-center gap-3">

        <arna.HRMS.Components.Pages.Attendance.ClockInOut />

        <div class="position-relative">
            <i class="bi bi-bell fs-5"></i>
            <span class="position-absolute top-0 start-100 translate-middle
                         bg-danger rounded-circle"
                  style="width:8px;height:8px"></span>
        </div>

        <SimpleUserMenu />
    </div>
</header>

@code {
    private string Greeting = string.Empty;
    private string FullName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;

        if (!isAuthenticated)
        {
            Navigation.NavigateTo("/login");
            return;
        }
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            FullName =
                user.FindFirst("FullName")?.Value
                ?? user.Identity?.Name
                ?? string.Empty;
        }

        SetGreeting();
    }

    private void SetGreeting()
    {
        var hour = DateTime.Now.Hour;

        Greeting = hour switch
        {
            >= 5 and < 12 => "Good Morning",
            >= 12 and < 17 => "Good Afternoon",
            >= 17 and < 21 => "Good Evening",
            _ => "Good Night"
        };
    }
}
